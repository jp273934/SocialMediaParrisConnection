<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/wall")
    @RenderSection("scripts", required: false)

</head>
<body>
<div class="ui fixed inverted menu">
    <div class="ui container">
        @Html.ActionLink("Parris Connection", "Index", "Wall", new { area = "" }, new { @class = "header item" })
        @Html.ActionLink("Home", "Index", "Wall", new {area = ""},  new {@class = "item"} )
        @Html.ActionLink("Profile", "Index", "Profile", new {area = ""}, new {@class="item"})
        <div class="right menu">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li></li>
                <li></li>
            </ul>
            
        </div>
    </div>
</div>
<div class="container-fluid">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

</body>
</html>
