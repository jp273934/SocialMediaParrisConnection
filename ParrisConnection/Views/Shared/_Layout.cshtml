<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/wall")
    @RenderSection("scripts", required: false)
    
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Modules/app.js"></script>
</head>
<body>
<div class="ui fixed inverted menu">
    <div class="ui container">
        @Html.ActionLink("Parris Connection", "Index", "Wall", new { area = "" }, new { @class = "header item" })
        @Html.ActionLink("Home", "Index", "Wall", new {area = ""},  new {@class = "item"} )
        @Html.ActionLink("Profile", "Index", "Profile", new {area = ""}, new {@class="item"})
        <div class="right menu">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>


    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>


</body>
</html>
