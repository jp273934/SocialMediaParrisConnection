@using System.Activities.Statements
@model ParrisConnection.ViewModels.WallViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4">
            <br/>
            @Html.ActionLink("Update Status", "Index", "SingleStatus", null, new {@class = "btn btn-primary"})
            <br/><br/>

            @foreach (var post in Model.Statuses)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p>@post.Post</p>

                        @using (Html.BeginForm("CreateComment", "Wall", new {statusId = @post.Id}, FormMethod.Post))
                        {
                            @Html.TextBox("Comment", null, new {@class = "form-control"})
                            <br/>
                            <button type="submit" class="btn btn-primary">Comment</button>
                            <br/><br/>
                        }

                        <ul>
                            @foreach (var comment in post.Comments)
                            {
                                <li>
                                    <p> @comment.PostComment </p>
                                </li>
                            }
                        </ul>

                    </div>
                </div>

            }
        </div>
        <div class="col-lg-4">
            
        </div>
    </div>


