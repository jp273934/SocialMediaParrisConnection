@model ParrisConnection.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row" id="PageArea">
    <div class="col-lg-2">
        @if (Model.ProfilePhoto.FilePath != null)
        {
            <img src="~/ProfilePhotos/@Model.ProfilePhoto.FilePath" style="height: 20vh; width: 20vh;" />
        }
        else
        {
            <img src="#" />
        }


        @using (Html.BeginForm("EditProfilePicture", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Update Profice Image :</label>
            <input type="file" name="file" id="file" /><br><br>
            <input type="submit" value="Upload Image" class="btn btn-primary" />
            <br><br>
        }
        <p>Some kind of description</p>
    </div>
    <div class="col-lg-10">
        <br />
        <div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#about" aria-controls="about" role="tab" data-toggle="tab">About</a></li>
                <li role="presentation"><a href="#photo" aria-controls="photo" role="tab" data-toggle="tab">Photos</a></li>
                <li role="presentation"><a href="#contact" aria-controls="contact" role="tab" data-toggle="tab">Contact Info</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="about">
                    <div class="row">
                        <div class="col-lg-4">
                            Work History
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div id="AddEmploymentForm" style="display: none">
                                        @using (@Ajax.BeginForm("AddEmployment", "Profile", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "PageArea" }))
                                        {
                                            <fieldset>
                                                <div class="row">
                                                    <div class="col-lg-1">
                                                        <input type="checkbox" id="EmployerCheckBox">
                                                    </div>
                                                    <div class="col-lg-11">
                                                        <label>Is Present Employment?</label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Employer</label>
                                                    @Html.TextBoxFor(e => e.NewEmployment.Name, new { @class = "form-control" })

                                                </div>

                                                <div class="form-group">
                                                    <label>Job Title</label>
                                                    @Html.TextBoxFor(e => e.NewEmployment.JobTitle, new { @class = "form-control" })
                                                </div>

                                                <div class="form-group">
                                                    <label>Start Date</label>
                                                    @Html.TextBoxFor(e => e.NewEmployment.StartDate, new { @class = "form-control datepicker" })
                                                </div>

                                                <div class="form-group" id="EndDateGroup">
                                                    <label>End Date</label>
                                                    @Html.TextBoxFor(e => e.NewEmployment.EndDate, new { @class = "form-control datepicker" })
                                                </div>

                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary">Add Employment</button>
                                                </div>
                                            </fieldset>
                                        }
                                    </div>
                                    <div id="EmploymentArea">
                                    @foreach (var employment in @Model.Employers)
                                    {
                                        <div class="form-group">
                                            <label>@employment.Name</label>
                                            <p>@employment.JobTitle @employment.DatesDisplay</p>
                                        </div>
                                    }
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <a id="AddEmployerLink">Add Employment</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            Education
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div id="AddEducationtForm" style="display: none">
                                        @using (@Html.BeginForm("AddEducation", "Profile", FormMethod.Post))
                                        {
                                            <div class="row">
                                                <div class="col-lg-1">
                                                    <input type="checkbox" id="EductionCheckBox">
                                                </div>
                                                <div class="col-lg-11">
                                                    <label>Is Present Education?</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Education Institution</label>
                                                @Html.TextBoxFor(e => e.NewEducation.Name, new { @class = "form-control" })

                                            </div>

                                            <div class="form-group">
                                                <label>Degree/Diploma</label>
                                                @Html.TextBoxFor(e => e.NewEducation.Degree, new { @class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <label>Start Date</label>
                                                @Html.TextBoxFor(e => e.NewEducation.StartDate, new { @class = "form-control datepicker" })
                                            </div>

                                            <div class="form-group" id="EductionEndDateGroup">
                                                <label>End Date</label>
                                                @Html.TextBoxFor(e => e.NewEducation.EndDate, new { @class = "form-control datepicker" })
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Add Education</button>
                                            </div>
                                        }
                                    </div>
                                    @foreach (var education in Model.Educations)
                                    {
                                        <div class="form-group">
                                            <label>@education.Name</label>
                                            <p>@education.Degree</p>
                                            <p>@education.DatesDisplay</p>
                                        </div>
                                    }
                                </div>
                                <div class="panel-footer">
                                    <a id="AddEducationLink">Add Education</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            Favorite Quotes
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div id="AddQuoteForm" style="display: none">
                                        @using (@Html.BeginForm("AddQuote", "Profile", FormMethod.Post))
                                        {                                          
                                            <div class="form-group">
                                                <label>Quote</label>
                                                @Html.TextBoxFor(e => e.NewQuote.Name, new { @class = "form-control" })

                                            </div>

                                            <div class="form-group">
                                                <label>Author</label>
                                                @Html.TextBoxFor(e => e.NewQuote.Author, new { @class = "form-control" })
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Add Quote</button>
                                            </div>
                                        }
                                    </div>
                                    @foreach (var quote in @Model.Quotes)
                                    {
                                        <div class="form-group">
                                            <p>@quote.Name @quote.AuthorDisplay</p>
                                        </div>
                                    }
                                </div>
                                <div class="panel-footer">
                                    <a id="AddQuoteLink">Add Quote</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="photo">
                    This is the photos area
                </div>
                <div role="tabpanel" class="tab-pane" id="contact">
                    <div class="row">
                        <div class="col-lg-4">
                            Phones
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div id="AddPhoneForm" style="display: none;">
                                        @using (@Html.BeginForm("AddPhoneNumber", "Profile", FormMethod.Post))
                                        {
                                            <div class="form-group">
                                                @foreach (var type in Model.PhoneTypes)
                                                {
                                                    @Html.RadioButtonFor(p => p.SelectedPhone, type.Id) @type.Type
                                                   
                                                    <br/>
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label>Phone Number</label>
                                                @Html.TextBoxFor(e => e.NewPhone.Number, new { @class = "form-control" })

                                            </div>

                                          

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Add Quote</button>
                                            </div>
                                        }
                                    </div>

                                    @foreach (var phone in @Model.Phones)
                                    {
                                        <div class="form-group">
                                            @phone.Number
                                        </div>
                                    }
                                </div>
                                <div class="panel-footer">
                                    <a id="AddPhoneLink">Add Phone Number</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            Email
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div id="AddEmailForm" style="display: none;">
                                        @using (@Html.BeginForm("AddEmail", "Profile", FormMethod.Post))
                                        {
                                            <div class="form-group">
                                                @foreach (var type in Model.EmailTypes)
                                                {
                                                    @Html.RadioButtonFor(p => p.SelectedEmail, type.Id) @type.Type

                                                    <br />
                                                }
                                            </div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                @Html.TextBoxFor(e => e.NewEmail.EmailAddress, new { @class = "form-control" })

                                            </div>



                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary">Add Email</button>
                                            </div>
                                        }
                                    </div>

                                    @foreach (var email in @Model.Emails)
                                    {
                                        <div class="form-group">
                                            @email.EmailAddress
                                        </div>
                                    }
                                </div>
                                <div class="panel-footer">
                                    <a id="AddEmalLink">Add Email</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            Links
                            <div class="panel panel-default">
                                <div class="panel-body">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


